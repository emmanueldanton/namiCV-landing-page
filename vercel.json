{
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build"
      },
      {
        "src": "backend/server.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/subscribe",
        "dest": "backend/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "frontend/dist/$1"
      }
    ],
    "installCommand": "npm install --prefix backend && npm install --prefix frontend"
  }